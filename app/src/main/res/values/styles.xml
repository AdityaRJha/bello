<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="formFillUp">
        <item name="android:layout_width">@dimen/standard_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StandardButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/standard_button_rounded</item>
        <item name="android:layout_width">@dimen/standard_width</item>
        <item name="android:layout_height">@dimen/standard_height</item>
    </style>

    <style name="LinkText">
        <item name="android:textColor">@color/light_green</item>
    </style>

    <style name="StandardFormButton" parent="StandardButton">
        <item name="android:layout_width">@dimen/standard_width</item>
        <item name="android:layout_height">@dimen/standard_height</item>
        <item name="android:layout_below">@+id/passwordTIL</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">@dimen/grid_2x</item>
    </style>

    <style name="FormImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginStart">@dimen/grid_2x</item>
        <item name="android:layout_marginTop">@dimen/grid_2x</item>
        <item name="android:layout_marginEnd">@dimen/grid_2x</item>
        <item name="android:layout_marginBottom">@dimen/grid_2x</item>
        <item name="android:contentDescription">@string/todo</item>
    </style>

    <style name="HeadingTitleBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/grid_1x</item>
        <item name="android:paddingStart">@dimen/grid_2x</item>
        <item name="android:paddingEnd">@dimen/grid_2x</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>